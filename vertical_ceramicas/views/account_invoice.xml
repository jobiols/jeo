<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- le damos permiso para que modifiquen el precio -->
        <record id="account_invoice_form_readonly_price_reves" model="ir.ui.view">
            <field name="name">invoice.order.form.readonly.reves</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>

            <field name="groups_id" eval="[  (6, 0, [ref('group_reves_manager_users'),
                                                     ref('group_reves_admin_users'),
                                                     ref('base.group_erp_manager')
                                                     ])]"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page/field/tree/field[@name='price_unit']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
            </field>
        </record>

    </data>
</openerp>