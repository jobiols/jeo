<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- eliminar vista kanban -->
        <record id="product.product_template_action" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="product.product_template_kanban_view"/>
            <field name="context">{"search_default_filter_to_sell":1}</field>
        </record>

        <record id="product_template_tree_view_import" model="ir.ui.view">
            <field name="name">product.template.product.tree.import</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="default_code" string="cod"/>
                </xpath>
                <xpath expr="//field[@name='type']" position="replace"/>
            </field>
        </record>

        <!-- eliminar ean13 y lst_price -->
        <record id="product_normal_form_import_view" model="ir.ui.view">
            <field name="name">product.normal.form.import.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="ean13" position="replace"/>
                <field name="lst_price" position="replace"/>
            </field>
        </record>

    </data>
</openerp>