<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- saca el campo incoterm -->

        <record id="view_invoice_form_valente" model="ir.ui.view">
            <field name="name">l10n_ar.invoice.form.valente</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <field name="afip_incoterm_id" position="replace"/>
            </field>
        </record>

        <!-- pone cantidad antes que descripciÃ³n en el presupuesto y orden de venta -->

        <record id="view_order_form_valente" model="ir.ui.view">
            <field name="name">sale.order.form.valente</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//tree[@string='Sales Order Lines']/field[@name='name']"
                       position="replace"/>
                <xpath expr="//tree[@string='Sales Order Lines']/field[@name='product_uom_qty']"
                       position="after">
                    <field name="name"/>
                </xpath>
            </field>
        </record>

        <!-- saca el boton cancelar factura en compras -->

        <record id="invoice_form_valente" model="ir.ui.view">
            <field name="name">account.invoice.form.valente</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account_cancel.invoice_form_cancel_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='invoice_cancel']" position="replace"/>
            </field>
        </record>

    </data>
</openerp>