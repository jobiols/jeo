<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record model='ir.ui.view' id='view_partner_form'>
            <field name='name'>res.partner.vat.inherit.base.vat.unique</field>
            <field name='model'>res.partner</field>
            <field name='inherit_id' ref='base_vat.view_partner_form'/>
            <field name='arch' type='xml'>
                <field name="vat" position="attributes">
                    <attribute name="attrs">{'required':[('is_company','=',True)]}
                    </attribute>
                </field>
            </field>
        </record>

        <record model='ir.ui.view' id='view_partner_tree'>
            <field name='name'>res.partner.tree.inherit.base.vat.unique</field>
            <field name='model'>res.partner</field>
            <field name='inherit_id' ref='base.view_partner_tree'/>
            <field name='arch' type='xml'>
                <field name="display_name" position="after">
                    <field name="vat"/>
                </field>
                <field name="email" position="after">
                    <field name="ref"/>
                </field>
            </field>
        </record>

        <record model='ir.ui.view' id='view_res_partner_filter'>
            <field name='name'>res.partner.select.inherit.base.vat.unique</field>
            <field name='model'>res.partner</field>
            <field name='inherit_id' ref='base.view_res_partner_filter'/>
            <field name='arch' type='xml'>
                <field name="name" position="after">
                    <field name="vat"/>
                </field>
            </field>
        </record>

        <record model='ir.ui.view' id='res_partner_kanban_view'>
            <field name='name'>res.partner.kanban.inherit.base.vat.unique</field>
            <field name='model'>res.partner</field>
            <field name='inherit_id' ref='base.res_partner_kanban_view'/>
            <field name='arch' type='xml'>
                <xpath expr="/kanban/field[@name='display_name']" position="after">
                    <field name="vat"/>
                </xpath>
                <xpath expr="//ul" position="inside">
                    <li t-if="record.vat.raw_value">
                        <field name="vat"/>
                    </li>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
