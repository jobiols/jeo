<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- regla global para que vean partners del color propio -->

        <record id="see_same_colour_partners_rule" model="ir.rule">
            <field name="name">Ver partners del color propio</field>
            <field name="model_id" ref="model_res_partner"/>
            <field eval="True" name="global"/>
            <field name="domain_force">
                ['|',('colour_id','=',3),('colour_id','=',user.colour_id.id)]
            </field>
        </record>

        <!-- regla global para que vean usuarios del color propio -->

        <record id="see_same_colour_user_rule" model="ir.rule">
            <field name="name">Ver usuarios del color propio</field>
            <field name="model_id" ref="model_res_users"/>
            <field eval="True" name="global"/>
            <field name="domain_force">[('colour_id','=',user.colour_id.id)]</field>
        </record>

        <!-- regla global para que vean diarios del color propio -->

        <record id="see_same_colour_journal_rule" model="ir.rule">
            <field name="name">Ver diarios del color propio</field>
            <field name="model_id" ref="account.model_account_journal"/>
            <field eval="True" name="global"/>
            <field name="domain_force">
                ['|',('colour_id','=',False),('colour_id','=',user.colour_id.id)]
            </field>
        </record>

    </data>
</openerp>