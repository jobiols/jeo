<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- agregar el campo color en la ficha de partner-->

        <record id="view_partner_colour_form" model="ir.ui.view">
            <field name="name">base.res.partner.colour.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='active']" position="after">
                    <field name="colour_id" groups="base.group_erp_manager" required="0"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>