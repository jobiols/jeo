<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- agregar el campo color en el la ficha del diario -->

        <record id="view_account_journal_colour_form" model="ir.ui.view">
            <field name="name">account.journal.colour.form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='centralisation']" position="before">
                    <field name="colour_id" groups="base.group_erp_manager"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>